<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vaibhavs.MineSweeper">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_impostor"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_impostor_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".UI.Help"
            android:screenOrientation="landscape"
            android:parentActivityName=".UI.Main_menu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UI.option"
            android:screenOrientation="landscape"
            android:parentActivityName=".UI.Main_menu"
            android:theme="@style/AppTheme.NoActionBar"
            />
        <activity
            android:name=".UI.game"
            android:screenOrientation="landscape"
            android:parentActivityName=".UI.Main_menu"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".UI.Main_menu"
            android:screenOrientation="landscape"
            android:label="Main Menu"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".UI.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>